#!/usr/bin/env aaseq

@Me

@Local_IPv4 Ping {
    Host 127.0.0.1
}

@Local_IPv4_Alternate Ping {
    Host 127.0.0.2
}

@Local_IPv6 Ping {
    Host ::1
}


Ping  >Local_IPv4 {
    Timeout      1s
    TTL          10
    DontFragment true
}
Reply <Local_IPv4 {
    Status Success
    RoundtripTime op=lt 10
}

Wait

Ping  >Local_IPv6 {
    Timeout 1000
}
Reply <Local_IPv6

Ping  >Local_IPv4_Alternate
Reply <Local_IPv4_Alternate
