#!/usr/bin/env aaseq

@Me

@Local_IPv4 Ping {
    Host localhost
}

@Local_IPv4_Alternate Ping {
    Host 127.0.0.2
}

@Local_IPv6 Ping {
    Host ::1
}

@RemoteEP Ping {
    Host 8.8.8.8
}


Ping >RemoteEP {

}

Ping  Me>Local_IPv4
Reply Me<Local_IPv4 {
    Status Success
}

Wait {
    Interval "1s"
}

Ping  >Local_IPv6
Reply <Local_IPv6 {
    Timeout 1000
}

Ping  >Local_IPv4_Alternate
Reply <Local_IPv4_Alternate

Reply <RemoteEP
